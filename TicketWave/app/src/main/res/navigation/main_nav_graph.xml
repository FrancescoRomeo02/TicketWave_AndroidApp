<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/travelFragment">

    <fragment
        android:id="@+id/travelFragment"
        android:name="it.marcosoft.ticketwave.util.TravelFragment"
        android:label="TravelFragment" >
        <action
            android:id="@+id/action_travelFragment_to_welcomeActivity"
            app:destination="@id/welcomeActivity" />
    </fragment>
    <activity
        android:id="@+id/welcomeActivity"
        android:name="it.marcosoft.ticketwave.ui.login.WelcomeActivity"
        android:label="activity_welcome"
        tools:layout="@layout/activity_welcome" />
    <fragment
        android:id="@+id/discoverFragment"
        android:name="it.marcosoft.ticketwave.util.DiscoverFragment"
        android:label="DiscoverFragment" >
        <action
            android:id="@+id/action_discoverFragment_to_welcomeActivity"
            app:destination="@id/welcomeActivity" />
    </fragment>
</navigation>